nav.navbar.navbar-fixed-top.navbar-inverse(role='navigation')
	.container-fluid
		.navbar-header
			a.navbar-brand(href='/')
				.tpl-logo-inverse
			button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
				span.sr-only Menu
				span.icon-bar
				span.icon-bar
				span.icon-bar

		.collapse.navbar-collapse.navbar-right#navbar-collapse
			ul.nav.navbar-nav
				each item in public._data.navigation
					if item.active
						li.active
							a(href='#{item.url}') #{item.title}
					else if item.modal
						li
							a(href='#{item.url}', data-toggle='modal', data-target='#myModal', data-keyboard='false', data-backdrop='static') #{item.title}
					else
						li
							a(href='#{item.url}') #{item.title}
							
